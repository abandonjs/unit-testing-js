{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*/__test__/*",
    "**/*/md.ts",
    "**/*/*.md"
  ]
}